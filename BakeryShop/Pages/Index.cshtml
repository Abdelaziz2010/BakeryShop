@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="featuredProduct" class="row">
    <div class="col-sm-8">
        <img src="~/Images/Products/@Model.FeaturedProduct.ImageName" alt="featuredProduct"
             class="img-fluid rounded"/>
    </div>
    <div id="featuredProductInfo" class="col-sm-4">
        <div id="productInfo">
            <h3>@Model.FeaturedProduct.Name</h3>

            <p class="price">
                $@string.Format("{0:f}", Model.FeaturedProduct.Price)
            </p>

            <p class="description">
                @Model.FeaturedProduct.Description
            </p>
        </div>

        <div id="calltoAction">
            <a asp-page="/order"
               class="btn btn-danger order-button"
               title="Order @Model.FeaturedProduct.Name"
               asp-route-id="@Model.FeaturedProduct.Id">Order Now</a>
        </div>

    </div>
</div>

<div id="productWrapper" class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-3">

            <a asp-page="/order" asp-route-id="@product.Id"
               title="Order @product.Name">
                <div class="productInfo">
                    
                    <h4>@product.Name</h4>
                    
                    <img src="~/Images/Products/@product.ImageName" alt="Image Product"
                         class="img-fluid rounded" />
                    
                    <p class="description">@product.Description</p>
                </div>
            </a>

            <div id="action">
                <p class="price float-left">
                    $@string.Format("{0:f}", product.Price)
                </p>
                <a asp-page="/order"
                   class="btn btn-danger order-button float-right"
                   title="Order @product.Name"
                   asp-route-id="@product.Id">Order Now
                </a>
            </div>

        </div>
    }
</div>